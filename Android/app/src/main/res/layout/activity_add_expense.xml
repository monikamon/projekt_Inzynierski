<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenseActivity">

    <Button
        android:id="@+id/AddConstantExpense"
        android:layout_width="165dp"
        android:layout_height="91dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Zadelkaruj stały wydatek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shoppingDate"
        android:layout_width="338dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:inputType="date"
        android:text="Podaj datę zakupu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddReceiptPhoto"
        android:layout_width="134dp"
        android:layout_height="84dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:text="Dodaj zdjęcie paragonu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddProduktButton"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="96dp"
        android:text="Dodaj produkt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingDate" />

</android.support.constraint.ConstraintLayout>